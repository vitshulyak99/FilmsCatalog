@using FilmsCatalog.Extensions
@model FilmDetailsViewModel

@{
    ViewData["Title"] = "Фильм";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>@Model.Name</h4>
    <hr />

    <dl class="row">
        @if (Model.PosterImg is not null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Poster)
            </dt>
            <dd class="col-sm-10">

                <img src="@Model.PosterImg" class="img-fluid m-2" alt="@Model.Poster" />

            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class="col-sm-2">Добавил</dt>
        <dd class="col-sm-10">
            @($"{Model.User.FirstName} {Model.User.MiddleName}")
        </dd>
    </dl>
</div>
<div>
    @if ((Model.User?.Id ?? string.Empty).Equals(User?.UserId()))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a><span> | </span>
        <a asp-action="Delete" asp-route-id="@Model.Id">Удалить</a><span> | </span>
    }
    <a asp-action="Index">На главную</a>
</div>